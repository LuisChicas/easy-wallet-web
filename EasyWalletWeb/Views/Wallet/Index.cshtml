@model EasyWalletWeb.ViewModels.WalletEntry

@section Styles
{
    <link rel="stylesheet" href="~/css/wallet.css" />
}

<div class="ew-navbar shadow-sm d-flex align-items-center p-2 px-5">
    <img src="~/images/logo.png" class="mr-3" width="35" height="30" />
    <h4 class="my-0 mr-4" style="color:white">Easy Wallet</h4>
    <a asp-controller="Wallet" asp-action="Index" class="p-2 mr-2 text-light">Home</a>
    <a asp-controller="Categories" asp-action="Index" class="p-2 mr-2 text-light">Categories</a>
    <a asp-controller="Reports" asp-action="History" class="p-2 mr-auto text-light">Reports</a>
    <a id="logout" asp-controller="Auth" asp-action="Logout" class="p-2 text-light">Log out</a>
</div>

<div class="wallet-container">
    @using (Html.BeginForm("Entry", "Wallet", FormMethod.Post, new { @class = "spend-form text-center" }))
    {
        <h1 class="h3 mb-4 font-weight-normal">Enter a spend</h1>

        @if (!string.IsNullOrEmpty(Model?.Entry))
        {
            @Html.ValidationSummary("", new { @class = "alert alert-danger" })
        }

        <div class="input-group">
            <input type="text" id="Entry" name="Entry" class="form-control" value="@Model?.Entry" placeholder="Write a tag and an amount. i.e.: 'Super Market $20'" required>
            <label for="inputSpend" class="sr-only">Spend</label>
            <div class="input-group-append">
                <button class="btn btn-primary btn-block" type="submit">Add</button>
            </div>
        </div>
        <input type="date" id="Date" name="Date" class="entry-date form-control mt-4" value="@DateTime.Now.ToString("yyyy-MM-dd")" required>
    }
</div>

@section Scripts
{
    <script src="~/js/logout.js"></script>
}
