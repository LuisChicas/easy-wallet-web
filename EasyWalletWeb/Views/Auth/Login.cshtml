@using Microsoft.AspNetCore.Mvc.Localization

@model EasyWalletWeb.ViewModels.AuthLogin

@inject IViewLocalizer Localizer

@{
    ViewData["Title"] = Localizer["Login"];
}

@section Styles {
    <environment include="Development">        
        <link rel="stylesheet" href="~/css/auth.css" />
    </environment>

    <environment exclude="Development">
        <link rel="stylesheet" href="~/css/auth.min.css" />
    </environment>
}

<div class="content">
    <div class="sw-navbar shadow-sm d-flex align-items-center p-3 px-5">
        <a asp-route="home"><img src="~/images/logo.png" class="mr-3" width="35" height="30" /></a>
        <a asp-route="home" class="mr-auto"><h4 class="my-0" style="color:white">Simple Wallet</h4></a>
    </div>

    <div class="login-container">
        <form class="form-auth form-signin text-center" action="Login" method="post">
            <img class="mb-4" src="~/images/appicon.png" alt="logo" width="100" height="100">
            <h1 class="h3 mb-4 font-weight-normal">@Localizer["Login"]</h1>

            @if (!string.IsNullOrEmpty(Model?.Email))
            {
                @Html.ValidationSummary("", new { @class = "alert alert-danger" })
            }

            <label for="Email" class="sr-only">@Localizer["EmailAddress"]</label>
            <input type="email" id="Email" name="Email" class="form-control" placeholder="@Localizer["EmailAddress"]" required autofocus>
            <label for="Password" class="sr-only">@Localizer["Password"]</label>
            <input type="password" id="Password" name="Password" class="form-control" placeholder="@Localizer["Password"]" required>
            <button class="btn btn-lg btn-primary btn-block mt-4" type="submit">@Localizer["Login"]</button>
            <span class="signup-in-login">@Localizer["DontHaveAccount"] <a asp-route="signup">@Localizer["Signup"]</a></span>
        </form>
    </div>

    <partial name="Footer" />
</div>